@{
    // *** TÍTULO DE LA VISTA
    ViewData["Title"] = "Inicio - MVCRestaurante";
}

// *** MODELO PRINCIPAL (DICCIONARIO CATEGORÍA -> LISTA CARTA)
@model Dictionary<string, List<Carta>>
// *** IMPORT MODELS
@using MVCRestaurante.Models

@{
    // *** OBTENEMOS LA LISTA DE DESTACADOS DESDE ViewBag
    List<Destacado> destacados = ViewBag.Destacados;
}

<!-- *** SECCIÓN DE DESTACADOS (CAROUSEL) *** -->
<section class="featured_section pt-3">
    <div class="container">
        @if (destacados != null && destacados.Count > 0)
        {
            <div id="carouselDestacados" class="carousel slide destacado-carousel" data-bs-ride="carousel" style="padding-top: 100px;">
                <div class="carousel-indicators">
                    @for (int i = 0; i < destacados.Count; i++)
                    {
                        <button type="button"
                                data-bs-target="#carouselDestacados"
                                data-bs-slide-to="@i"
                                class="@(i == 0 ? "active" : "")"
                                aria-label="Slide @(i + 1)">
                        </button>
                    }
                </div>

                <div class="carousel-inner">
                    @for (int i = 0; i < destacados.Count; i++)
                    {
                        var item = destacados[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")" data-bs-interval="5000">
                            <div class="img-container">
                                <img src="~/images/destacados/@item.Imagen" class="d-block w-100 destacado-img" alt="@item.Titulo">
                            </div>
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@item.Titulo</h5>
                                <p>@item.Descripcion</p>
                            </div>
                        </div>
                    }
                </div>

                <button class="carousel-control-prev"
                        type="button"
                        data-bs-target="#carouselDestacados"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next"
                        type="button"
                        data-bs-target="#carouselDestacados"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        }
        else
        {
            <p class="text-center">No hay destacados disponibles en este momento.</p>
        }
    </div>
</section>


<!-- *** SECCIÓN DEL MENÚ *** -->
<section class="food_section layout_padding-bottom" style="padding:75px 0px 0px 0px;">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Nuestra Carta</h2>
        </div>

        <!-- *** FILTROS DE MENÚ (CATEGORÍAS) *** -->
        <ul class="filters_menu">
            <li class="active" data-filter="*">Todos</li>
            @foreach (var categoria in Model.Keys)
            {
                <li data-filter=".@categoria.Replace(" ", "").ToLower()">@categoria</li>
            }
        </ul>

        <div class="filters-content">
            <div class="row grid">
                @foreach (var categoria in Model.Keys)
                {
                    @foreach (var plato in Model[categoria])
                    {
                        <div class="col-sm-6 col-lg-4 all @categoria.Replace(" ", "").ToLower()">
                            <div class="box">
                                <a href="@Url.Action("Detalle", "Platos", new { id = plato.IdPlato })" style="text-decoration: none; color: inherit;">
                                    <div class="img-box">
                                        <img src="~/images/platos/@plato.Imagen" alt="@plato.Nombre">
                                    </div>
                                    <div class="detail-box">
                                        <h5>@plato.Nombre</h5>
                                    </div>
                                </a>
                                <div class="detail-box">
                                    <p>@plato.Descripcion</p>
                                    <div class="options">
                                        <h6>€ @plato.Precio</h6>
                                        <a href="#" class="add-to-cart" data-id="@plato.IdPlato" style="color: inherit; text-decoration: none;">
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>

@* ESPACIO PARA GUARDAR LA UBICACIÓN DE LA EMPRESA *@
